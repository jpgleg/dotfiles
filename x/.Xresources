Xcursor.size: 14

URxvt*font: xft:mono:medium:size=12
xterm*faceName: xft:mono:medium:size=12

URxvt*depth                  : 32
URxvt*transparent            : false
URxvt*letterspace            : -1
URxvt*scrollBar              : false
URxvt*scrollstyle            : plain
!do not scroll with output
URxvt*scrollTtyOutput        : false
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress      : true
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer       : true
!URxvt should scroll in less
URxvt.secondaryScreen        : 1
URxvt.secondaryScroll        : 0
URxvt.secondaryWheel         : 1
!Jump word boundaries with ctrl+arrows
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

URxvt*saveLines              : 100000
URxvt*pointerBlank           : true
URxvt*cursorBlink            : false
URxvt*meta8                  : false
URxvt*modifer                : ctrl
Rxvt*modifer                 : ctrl
URxvt.perl-ext-common        : default,matcher
URxvt*url-launcher           : x-www-browser
URxvt.matcher.button         : 1
URxvt*iso14755               : false
URxvt*iso14755_52            : false
URxvt*antialias              : true

! From https://github.com/logico-dev/Xresources-themes.
#include "dotfiles/resources/base16-monokai-256.Xresources"
*background: #040404
